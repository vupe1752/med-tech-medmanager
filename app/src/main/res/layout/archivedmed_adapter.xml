<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:weightSum="100"
    android:orientation="horizontal"
    android:background="@color/MistyRose">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="70"
        android:layout_height="40dp"
        android:id="@+id/med_name5"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="40dp"
        android:id="@+id/status_control5"
        android:background="@drawable/ic_baseline_unarchive_24"
        android:textColor="@color/black"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackgroundBorderless" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="40dp"
        android:id="@+id/delete5"
        android:background="@drawable/ic_baseline_delete_outline_24"
        android:textColor="@color/black"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

</LinearLayout>